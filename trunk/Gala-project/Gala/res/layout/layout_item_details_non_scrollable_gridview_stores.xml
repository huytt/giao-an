<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e9eaed"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gridview_vertical_margin"
    android:paddingLeft="@dimen/gridview_horizontal_margin"
    android:paddingRight="@dimen/gridview_horizontal_margin"
    android:paddingTop="@dimen/gridview_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corner_black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgStore"
            android:layout_width="400px"
            android:layout_height="300px"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/straight_line_store" />

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="xxxxxx"
            android:textColor="#00CC2E"
            android:textSize="20dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icView"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="right"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>