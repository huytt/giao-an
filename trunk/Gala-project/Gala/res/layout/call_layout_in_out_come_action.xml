<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@null"
    android:orientation="vertical"
    android:weightSum="9" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3.5" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical"
            android:weightSum="6" >

            <include
                android:id="@+id/view_call_action_mute"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />

            <include
                android:id="@+id/view_call_action_chat"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />

            <include
                android:id="@+id/view_call_action_speak"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:weightSum="6" >

            <include
                android:id="@+id/view_call_action_video_call"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />

            <include
                android:id="@+id/view_call_action_call_transfer"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />

            <include
                android:id="@+id/view_call_action_contact"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="2"
                layout="@layout/call_layout_action_button_detail" />
        </LinearLayout>

        <!-- <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:weightSum="6" >
        </LinearLayout> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3.3"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_call_action_cancel_80" />
    </LinearLayout>

</LinearLayout>