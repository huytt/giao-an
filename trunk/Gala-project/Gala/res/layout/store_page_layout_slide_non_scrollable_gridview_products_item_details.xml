<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_page"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gridview_vertical_margin"
    android:paddingLeft="@dimen/gridview_horizontal_margin"
    android:paddingRight="@dimen/gridview_horizontal_margin"
    android:paddingTop="@dimen/gridview_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corner_black"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="267px"
            android:layout_height="200px"
            android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_textview_item_product_sale_1"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvSale"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="Sale\n 50%"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:textStyle="normal" />
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="18px"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner_black"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ibtnFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_rounded_corner_black"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvRealPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="350,000 d"
                    android:textColor="#000"
                    android:textSize="14px"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvSalePrice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="300,000 d"
                    android:textColor="#FFFF4444"
                    android:textSize="18px"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>