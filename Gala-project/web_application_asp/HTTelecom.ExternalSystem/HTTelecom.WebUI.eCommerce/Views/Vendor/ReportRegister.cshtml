@{
    ViewBag.Title = "ReportRegister";
    /*Layout = "~/Views/Shared/_LayoutPC.cshtml";*/
    ViewBag.Back = Url.Action("Index", "Home");
}
@model HTTelecom.Domain.Core.DataContext.cis.Vendor
<div class="row user-margin-10 backgournd-color-white">
    <h4 class="header center user-color-main user-padding-10" data-element="color" style="border-bottom: 3px solid; letter-spacing: 5px; ">Register report</h4>
    <div class="col s12">
        @{            
            if (TempData["gMessageCurrent"] != null)
            {
                if(TempData["gMessageCurrent"] == "activated")
                {
                     <div class="row">
                        <div class="col s12" style="text-align:center;color:red;">
                            Your account is activated.
                            @{
                                /*get host link*/
                                string url_verify = "";
                                url_verify = Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port;
                            }
                            Click <a style="text-align:center;color:blue;" href="@url_verify">here</a> to go Index.
                        </div>
                    </div>                    
                }
                
                if(TempData["gMessageCurrent"] == "active")
                {
                     <div class="row">
                        <div class="col s12" style="text-align:center;color:blue;">
                           Congratulation!! Your account is activated.
                        </div>
                    </div>                    
                }

                if (TempData["gMessageCurrent"] == "notActive")
                { 
                    <div class="row">
                        <div class="col s12" style="text-align:center;color:red;">
                            @{                  
                                /*get host link*/
                                string url_verify = "";                          
                                url_verify = Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port;
                                /*thêm vào controllers và action :D*/
                                url_verify += "/Vendor/ReportResendMailRegister/?cId=" + Model.VendorId;
                            }
                            <br/>
                            Your account is not activated! Please go to your email and click activation link.
                            If you do not receive email, please click <a style="text-align:center;color:blue;" href="@url_verify">here</a> to resend mail.
                        </div>
                    </div>    
                }
                
                if (TempData["gMessageCurrent"] == "register")
                { 
                    <div class="row">
                        <div class="col s12" style="text-align:center;color:blue;">
                            Thank you! Your account has been registered. Please check email and active your account.
                        </div>
                    </div>    
                }


                if (TempData["gMessageCurrent"] == "ReportResendMailRegister")
                { 
                    <div class="row">
                        <div class="col s12" style="text-align:center;color:blue;">
                            @{
                    /*get host link*/
                                string url_verify = "";
                                url_verify = Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port;                    
                            }
                            Please check your email. Click <a style="text-align:center;color:blue;" href="@url_verify">here</a> to go Index.
                        </div>
                    </div>    
                }

                if (TempData["gMessageCurrent"] == "passCheckingWrong")
                {
                     <div class="row">
                        <div class="col s12" style="text-align:center;color:blue;">
                           Error! Key checking is wrong.
                        </div>
                    </div>                    
                }

                if (TempData["gMessageCurrent"] == "passCheckingNull")
                {
                     <div class="row">
                        <div class="col s12" style="text-align:center;color:blue;">
                            Error! Key checking is null.
                        </div>
                    </div>                    
                }                
            }
        }
    </div>
</div>
