            <img src="@(HTTelecom.WebUI.eCommerce.Common.HTXoneServer.Connect + itemLv0.Item2.Url + itemLv0.Item2.MediaName)" style=" width: 36px; height: 36px; position: absolute; top: 6px; left: 3px;" />
            <a class="user-color-blank" href="@link" style="display: table-cell; vertical-align: middle; width: 100%; padding-left: 34px; height: 42px;">
                @itemNameLv0
            </a>
        </div>
        fxx++;
    }

}
