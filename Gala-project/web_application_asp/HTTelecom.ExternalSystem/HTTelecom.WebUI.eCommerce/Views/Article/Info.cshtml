@{
    ViewBag.Back = Url.Action("Index", "Home");
    ViewBag.Title = "Info";
}
@model HTTelecom.Domain.Core.DataContext.mss.Article
<div class="breadcrumbs">
    <ul style="margin:0px;">
        <li class="prs"><a class="current">@Model.ArticleType.ArticleTypeName</a></li>
    </ul>
</div>
<div class="group-item">
    <a class="item-left">
        @Model.Title
    </a>
    <div class="clearfix"></div>
</div>
<div class="group-panel user-padding-10">
    <div class="user-content-raw">@Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.Introduction))</div>
    <div class="user-content-raw">@Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.ArticleContent))</div>
</div>
@section CSS{
    <style>
        .user-content-raw img {
            max-width: 100%;
            height: auto;
        }
        body{
            background-color:white;
        }
    </style>
}