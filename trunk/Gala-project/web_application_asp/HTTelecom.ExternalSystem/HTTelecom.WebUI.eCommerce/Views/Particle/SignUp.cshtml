@{
    Layout = null;
}
@model HTTelecom.WebUI.eCommerce.Models.SignUpModel
@using (Html.BeginForm("SignUp", "Customer", FormMethod.Post))
{
    @Html.Hidden("ur", (string)ViewBag.ur)
    if (TempData["gMessageCurrent"] != null)
    {
        var gMessageCurrent = (List<string>)TempData["gMessageCurrent"];
        <div class="form-group">
            @foreach (var item in gMessageCurrent)
            {
                <p>@item</p>
            }
        </div>
    }
    <div class="form-group">
        <label for="icon_firstname" class="col-sm-2 control-label">firstname</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.firstname, new { @class = "validate form-control", id = "icon_firstname" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_lastname" class="col-sm-2 control-label">lastname</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.lastname, new { @class = "validate form-control", id = "icon_lastname" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_Email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.email, new { @class = "validate form-control", id = "icon_Email" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_password" class="col-sm-2 control-label">password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.password, new { @class = "validate form-control", id = "icon_password" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_rePassword" class="col-sm-2 control-label">rePassword</label>
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.rePassword, new { @class = "validate form-control", id = "icon_rePassword" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_Birthday" class="col-sm-2 control-label">Birthday</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "validate form-control", id = "icon_Birthday" })
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <label for="icon_prefix" class="col-sm-2 control-label">Gender</label>
        <div class="col-sm-10">
            <select>
                <option>Nam</option>
                <option>Nữ</option>
                <option>Khác</option>
            </select>
        </div>
        <div class="clearfix"></div>
    </div>
    <button type="submit" class="btn btn-default" style="width: 100%; background: rgb(0, 204, 46);color:white">Đăng ký</button>
}