<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_page"
    android:orientation="vertical"
    tools:context="com.hopthanh.gala.app.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@drawable/bg_rounded_corner_black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textview_name_margin_left"
            android:gravity="left"
            android:text="@string/homepageStore"
            android:textColor="@color/bg_actionbar"
            android:textSize="@dimen/textview_name_size" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/straight_line_margin"
            android:layout_marginRight="@dimen/straight_line_margin"
            android:src="@drawable/straight_line_main" />

        <com.hopthanh.gala.customview.CustomViewPagerWrapContent
            android:id="@+id/vpGridView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>