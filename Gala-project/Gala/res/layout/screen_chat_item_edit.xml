<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#e5eaee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/screen_chat_item_linearLayout_left"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/screen_chat_item_imageView_avatar_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/message_avatar"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/screen_chat_item_linearLayout_right"
            android:layout_toRightOf="@+id/screen_chat_item_linearLayout_left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/screen_chat_item_imageView_top_left"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/message_outcoming_top_left" >
            </ImageView>

            <LinearLayout
                android:id="@+id/ln_chat_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/screen_chat_item_imageView_top_right"
                android:layout_toRightOf="@+id/screen_chat_item_imageView_top_left"
                android:background="@color/bg_chat_in_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/screen_chat_item_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_weight="6"
                    android:text="TextViews"
                    android:textColor="@color/black"
                    android:textSize="17sp" >
                </TextView>

                <TextView
                    android:id="@+id/screen_chat_item_textView_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3px"
                    android:gravity="center_horizontal"
                    android:text="Vendredi 25, 2001 8:09 PM"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="visible" >
                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/screen_chat_item_imageView_top_right"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/message_incoming_top_right" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/screen_chat_item_linearLayout_right"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/screen_chat_item_imageView_avatar_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/message_avatar"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>