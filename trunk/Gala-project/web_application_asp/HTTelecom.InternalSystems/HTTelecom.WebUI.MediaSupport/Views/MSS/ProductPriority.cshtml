@{
    ViewBag.Action = "ProductPriority";
    ViewBag.Controller = "MSS";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using HTTelecom.Domain.Core.DataContext.mss
@using HTTelecom.WebUI.MediaSupport.ViewModels
@model ProductPriorityViewModel

@{
    AjaxOptions ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "tableBody",
        Url = Url.Action("GetProductPriorityData"),
        LoadingElementId = "loading",
        LoadingElementDuration = 1000
    };
}
<h2>Product Priority</h2>
<div>
    @Html.ActionLink("Create Product Priority" , "ProductPriorityCreate", "MSS")
</div>

@using (Ajax.BeginForm(ajaxOpts))
{
    <div>
        @Html.DropDownList("groupPriorityId", new SelectList(Model.list_GroupPriority, "GroupPriorityId", "GroupPriorityName"), "ALL")
        <button type="submit">Submit</button>
        <div id="loading" class="load" style="display:none">
            <p>Loading Data...</p>
        </div>
    </div>
}
<table>
    <thead>
        <tr>
            <th style="width: 5%">ID</th>
            <th style="width: 25%">Product Name</th>
            <th style="width: 25%">Start Date</th>
            <th style="width: 25%">End Date</th>
            <th style="width: 25%">Group</th>
            <th style="width: 5%">Order Number</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @Html.Action("GetProductPriorityData", new { groupPriorityId = Model.groupPriorityId })
    </tbody>
</table>


