<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hopthanh.gala.app.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Products"
        android:textSize="@dimen/textview_name_size" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:src="@drawable/straight_line_main" />

    <com.hopthanh.gala.customview.CustomViewPagerWrapContent
        android:id="@+id/vpGridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>