            android:id="@+id/tvProductName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="VER"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="normal" />

